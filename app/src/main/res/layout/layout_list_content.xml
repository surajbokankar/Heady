<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_8dp"
        android:layout_marginRight="@dimen/dim_8dp"
        android:background="@drawable/product_background"
        android:layout_marginTop="@dimen/dim_8dp"
        android:id="@+id/product_content_parent"
        >

        <com.github.pavlospt.CircleView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/circle_image_view"
            android:layout_marginTop="@dimen/dim_16dp"
            android:background="@drawable/rounded_circle_red_color"
            android:textAlignment="center"
            android:paddingTop="@dimen/dim_12dp"
            android:textColor="@color/colorPrimary"
            app:cv_titleSize="@dimen/dim_22sp"
            app:cv_titleColor="@color/color_FFFFFF"
            app:cv_fillColor="@color/color_000000"
            app:cv_fillRadius="0.9"
            app:cv_strokeWidthSize="0"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:typeface="sans"
            android:layout_below="@id/circle_image_view"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/dim_16sp"
            android:textStyle="bold"
            android:id="@+id/product_title_view"
            android:paddingTop="@dimen/dim_8dp"
            android:paddingBottom="@dimen/dim_8dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_date_view"
            android:layout_below="@id/product_title_view"
            android:text="@string/network_error"
            android:textSize="@dimen/dim_14sp"
            android:textAlignment="center"
            />

    </RelativeLayout>



</LinearLayout>
