<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.github.pavlospt.CircleView
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_product_view"
            android:layout_marginTop="@dimen/dim_16dp"
            android:background="@drawable/rounded_circle_red_color"
            android:textAlignment="center"
            android:paddingTop="@dimen/dim_12dp"
            android:textColor="@color/colorPrimary"
            app:cv_titleSize="@dimen/dim_22sp"
            app:cv_titleColor="@color/color_FFFFFF"
            app:cv_fillColor="@color/color_000000"
            app:cv_fillRadius="0.9"
            app:cv_strokeWidthSize="0"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_product_view"
            android:orientation="vertical"
            >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_8dp"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:id="@+id/title_product_text"
                android:textSize="@dimen/dim_16sp"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:id="@+id/sub_title"
                android:textSize="@dimen/dim_14sp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_38dp"
                android:id="@+id/color_recycler_view"
                android:layout_margin="@dimen/dim_8dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_38dp"
                android:id="@+id/size_recycler_view"
                android:layout_marginLeft="@dimen/dim_8dp"
                android:layout_marginRight="@dimen/dim_8dp"
                />


        </LinearLayout>


    </RelativeLayout>

</layout>

